{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base"],
	"prHourlyLimit": 2,
	"rangeStrategy": "pin",
	"lockFileMaintenance": {
		"automerge": true
	},
	"patch": {
		"automerge": true
	},
	"separateMinorPatch": true,
	"packageRules": [
		{
			"matchPackageNames": ["node"],
			"matchManagers": ["npm"],
			"matchDepTypes": ["engines"],
			"enabled": false
		}
	]
}
